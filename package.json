{
  "name": "multilang-autofixer",
  "displayName": "CodeMedic",
  "description": "Multi-Language Real-Time Syntax Auto-Fixer Using Tree-sitter",
  "version": "0.0.1",
  "publisher": "Aryan Shrivastav",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:java",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:go",
    "onLanguage:ruby",
    "onLanguage:rust",
    "onLanguage:php"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoFixSyntax.start",
        "title": "Start Auto Syntax Fixer"
      },
      {
        "command": "multilang-autofixer.ShowLog",
        "title": "AutoFix: ShowLog"
      },
      {
        "command": "multilang-autofixer.toggle",
        "title": "AutoFix: Toggle On/off"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Multi-Language Auto-Fixer",
      "properties": {
        "multilangAutofix.autoapply": {
          "type": "boolean",
          "default": true,
          "description": "Automatically apply safe fixes without confirmation."
        },
        "multilangAutofix.python.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoFixes for Python."
        },
        "multilangAutofix.javascript.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoFixes for JavaScript."
        },
        "multilangAutofix.java.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoFixes for Java."
        },
        "multilangAutofix.php.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoFixes for PHP."
        },
        "multilangAutofix.cpp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoFixes for C++."
        },
        "multilangAutofix.go.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoFixes for Go."
        },
        "multilangAutofix.c.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoFixes for C."
        },
        "multilangAutofix.ruby.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoFixes for Ruby."
        },
        "multilangAutofix.rust.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AutoFixes for Rust."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p . && node esbuild.js",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.6",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "compile": "^0.0.2",
    "npm": "^11.6.1",
    "run": "^1.5.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-c": "^0.21.4",
    "tree-sitter-cpp": "^0.22.3",
    "tree-sitter-go": "^0.25.0",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-php": "^0.22.2",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-ruby": "^0.21.0",
    "tree-sitter-rust": "^0.21.0"
  }
}
